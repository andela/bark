<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.andela.bark.fragments.TicketVerificationFragment"
              android:orientation="vertical" android:weightSum="1">

    <EditText
        android:id="@+id/ticket_number_field"
        android:hint="@string/ticket_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"/>

    <Button
        android:id="@+id/submit_ticket_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="@string/verify_ticket_button" android:layout_weight="0.13"/>
    <Button
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_barcode_button_text"
        android:id="@+id/scan_button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.53"/>

</LinearLayout>
